<div class="row order-form">
	<div class="col-md-4 col-md-offset-4">
		<div class="panel panel-default">
			<div class="panel-heading">
				<h3 class="panel-title">Order form</h3>
			</div>
			<div class="panel-body">
				<p>You are placing an order for <b><%= @menu_item.name %></b></p>
				<p>Price: <%= @menu_item.price %> Ä‘</p>
				<%= form_tag("/menu/order_submit", method: "post") do %>
				<input type="hidden" name="order[menu_item_id]" value="<%= @menu_item.id %>">
				<div class="input-group">
					<span class="input-group-addon" id="basic-addon1">Name</span>
					<input type="text" name="order[name]" class="form-control" aria-describedby="basic-addon1">
				</div>
				<div class="input-group">
					<span class="input-group-addon" id="basic-addon1">Phone</span>
					<input type="text" name="order[phone]" class="form-control" aria-describedby="basic-addon1">
				</div>
				<div class="input-group">
					<span class="input-group-addon" id="basic-addon1">Address</span>
					<input type="text" name="order[address]" class="form-control" aria-describedby="basic-addon1">
				</div>
				<button type="submit" class="btn btn-primary col-md-12">Order</button>
				<% end %>
			</div>
		</div>
	</div>
</div>